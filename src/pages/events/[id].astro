---
import Layout from '@layouts/Layout.astro';

import HeroHeader from '@components/HeroHeader.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const events = await getCollection('events');
  return events.map((event) => ({
    params: { id: event.id },
    props: { event }
  }));
}

const { event } = Astro.props;
const { Content } = await render(event);

// No image resolution logic here; HeroHeader handles optimized image
---

<Layout title={event.data.title + ' - Cotham Gardens PTFA'}>
  <HeroHeader
    title={event.data.title}
    image={event.data.image}
    date={event.data.eventDate}
  />

  <div class="prose lg:prose-xl px-4">
    <a href="/events" class="mb-4 block">&larr; All Events</a>

    {/* Title rendered by HeroHeader (with fallback when no image) */}

    <Content />
  </div>
</Layout>
