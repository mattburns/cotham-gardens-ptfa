<header class="bg-pink-700 text-gray-100 shadow">
  <div
    class="container mx-auto flex flex-wrap items-center justify-between px-4 py-6"
  >
    <a href="/" class="text-2xl font-bold text-pink-100">Cotham Gardens PTFA</a>

    <button
      id="menu-btn"
      class="block rounded focus:outline-none md:hidden"
      type="button"
    >
      <svg
        class="h-6 w-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>

    <nav
      id="nav-content"
      class="hidden w-full md:flex md:w-auto md:items-center"
    >
      <a href="/" class="block px-4 py-2 text-pink-100 md:inline-block">Home</a>
      <a href="/about" class="block px-4 py-2 text-pink-100 md:inline-block"
        >About</a
      >
      <a
        href="/active-travel"
        class="block px-4 py-2 text-pink-100 md:inline-block">Active Travel</a
      >
      <a href="/events" class="block px-4 py-2 text-pink-100 md:inline-block"
        >Events</a
      >
      <a href="/contact" class="block px-4 py-2 text-pink-100 md:inline-block"
        >Contact</a
      >
    </nav>
  </div>
</header>

<script>
  document.getElementById('menu-btn')?.addEventListener('click', function () {
    document.getElementById('nav-content')?.classList.toggle('hidden');
  });
</script>
