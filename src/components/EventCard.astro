---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

type Props = {
  event: CollectionEntry<'events'>;
};

const { event } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/images/*'
);
---

<div
  class="max-w-sm rounded-lg border border-gray-200 bg-white shadow transition duration-200 hover:scale-105"
>
  <a href={`/events/${event.id}/`}>
    {
      event.data.image && images[`/${event.data.image}`] && (
        <Image
          class="rounded-t-lg"
          src={images[`/${event.data.image}`]()}
          alt={event.data.title}
        />
      )
    }
    <div class="p-5">
      <h5 class="mb-2 text-2xl font-bold tracking-tight">
        {event.data.title}
      </h5>
      <p class="mb-3 font-normal text-gray-700">
        {
          event.data.eventDate.toLocaleDateString('en-GB', {
            day: 'numeric',
            month: 'short',
            year: 'numeric'
          })
        }
      </p>
    </div>
  </a>
</div>
